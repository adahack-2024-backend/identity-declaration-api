generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AgeGroup {
  id          Int                 @id @default(autoincrement())
  code        String              @unique
  description String
  responses   DiversityResponse[]
}

model Gender {
  id       Int       @id @default(autoincrement())
  code     String    @unique
  value    String
  responses DiversityResponse[]
}

model Ethnicity {
  id       Int       @id @default(autoincrement())
  code     String    @unique
  value    String
  responses DiversityResponse[]
}

model Disability {
  id       Int       @id @default(autoincrement())
  code     String    @unique
  value    String
  responses DiversityResponse[]
}

model DiversityResponse {
  id                 Int          @id @default(autoincrement())
  ageGroupId         Int
  ageGroup           AgeGroup     @relation(fields: [ageGroupId], references: [id])
  genderId           Int
  gender             Gender       @relation(fields: [genderId], references: [id])
  ethnicityId        Int
  ethnicity          Ethnicity    @relation(fields: [ethnicityId], references: [id])
  lgbtqia            Boolean
  parent             Boolean
  disabilityId       Int
  disability         Disability   @relation(fields: [disabilityId], references: [id])
  createdAt          DateTime     @default(now())
  isInternalResponse Boolean      @default(false)

  @@map("diversity_responses")
}
